<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

        <record id="view_cancel_appointment_form" model="ir.ui.view">
            <field name="name">cancel.appointment.wizard.form</field>
            <field name="model">cancel.appointment.wizard</field>
            <field name="arch" type="xml">
                <form>
                        <group>
                            <group>
                                <field name="appointment_id"/>
                                <field name = "reason"/>

                            </group>
                            <group>
                                <field name="date_cancel"/>
                            </group>
                        </group>

                        <footer>
                                <button name="action_cancel" string="cancel appointment" type="object" class="btn-primary" data-hotkey="q" />
<!--                            <button name="action_cancel" string="cancel" type="object" states="draft,in_consultation"/>-->
                            <button special="cancel" data-hotkey="z" string="Discard" class="btn-secondary" />
                        </footer>
                </form>
            </field>
        </record>
    <record id="action_cancel_appointment" model="ir.actions.act_window">
        <field name="name">cancel appointment</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">cancel.appointment.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field> <!--It opens a window with a new address and edit mode(as when creating wizarrd-->



    </record>
    <record id="action_cancel_appointment_all" model="ir.actions.act_window">
        <field name="name">cancel appointment</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">cancel.appointment.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="visa.view_cancel_appointment_form"/>
        <field name="binding_model_id" ref="model_visa_appointment"></field>
        <field name="binding_view_types">tree</field>

    </record>

</odoo>