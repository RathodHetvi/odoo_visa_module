<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

        <record id="view_visa_application_tree" model="ir.ui.view">
            <field name="name">visa.application.tree</field>
            <field name="model">visa.application</field>
            <field name="arch" type="xml">

                <tree>
                    <field name="name" string="client name" options='{"bg_color": "red:adult == True"}'/>
                    <field name="age"/>
                    <field name="gender"/>
                    <field name="role" groups="visa.group_visa_manager"/>
                    <field name="adult"/>
                </tree>
            </field>
        </record>

        <record id="view_visa_application_form" model="ir.ui.view">
            <field name="name">visa.application.form</field>
            <field name="model">visa.application</field>
            <field name="arch" type="xml">
                <form>
                    <header>
<!--                        <button name="action_create" string="create" class="oe_highlight" type="object"/>-->
                        <button name="action_update" string="update record" class="oe_highlight" type="object"/>
                        <button name="action_copy" string="make copy" class="oe_highlight" type="object"/>
                        <button name="action_unlink" string="delete" class="oe_highlight" type="object"/>
                        <button name="action_report" string="print" class="oe_highlight" type="object"/>

                    </header>

                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" type="object" name="action_open_appointments" icon="fa-calendar">
                                <div class="o_stat_info">
                                    <field name="appointment_count" class="o_stat_value"/>
                                    <span class="o_stat_text">Appointment</span>
                                </div>
                            </button>
                        </div>
                          <group>
                              <group>
                                    <field name="name"/>
                                    <field name="date_of_birth"/>
                                    <field name="age"/>
                                    <field name ="adult" invisible="0"/>
                                    <field name="phone" attrs="{'invisible': [('adult', '=', False)]}"/>
                                    <field name="role" groups="visa.group_visa_manager"/>
                                    <field name="country"/>

<!--                                    <field name="visa_type_tag" widget="many2many_tags_link"/>-->
                                    <field name="visa_type_tag" widget="many2many_tags"/>


<!--                                    <field name="country"/>-->

<!--                                    <field name="tag_ids" widget="many2many_tags"/>-->


                              </group>
                              <group>
                                  <field name="image" widget="image" class="oe_left oe_avatar" />
                                  <field name="gender"/>
                                  <field name="ref"/>
                                  <!--                                  <field name ="tag_ids2"/>-->

                              </group>

                        </group>
<!--                        <notebook>-->
<!--                            <page string="country" name="country">-->
<!--                                <field name ="visa_country_ids">-->
<!--                                    <tree delete="true">-->
<!--                                        <field name="country"/>-->
<!--                                        <field name="country_code"/>-->

<!--                                    </tree>-->
<!--                                    <form>-->
<!--                                        <group>-->
<!--                                            <field name="country"/>-->
<!--                                            <field name ="country_code"/>-->
<!--                                        </group>-->
<!--                                    </form>-->
<!--                                </field>-->
<!--                            </page>-->
<!--                        </notebook>-->
                    </sheet>

                    <div class="oe_chatter">
                        <field name="message_follower_ids" groups="base.group_user"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>
        <record id="view_visa_application_search" model="ir.ui.view">
            <field name="name">visa.application.search</field>
            <field name="model">visa.application</field>
            <field name="arch" type="xml">
                <search>

<!--                    <field name="name" string="client name" filter_domain="['|',('name','ilike',self),('ref','ilike',self)]"/>-->
                    <field name="name" string="client name" filter_domain="[('name','ilike',self)]"/>
                    <field name="ref"/>
                    <field name="age"/>
                    <field name="gender"/>
                    <filter name="filter_male" string="Male" domain="[('gender','=','male')]"/>
                    <filter name="filter_female" string="Female" domain="[('gender','=','female')]"/>
<!--                    <separator/>-->
<!--                    <filter name="filter_kids" string="Kids" domain="[('age','&gt;=', 5)]"/>-->
                    <group expand="0" string="Group By">
                        <filter string="Gender" name="group_by_gender" context="{'group_by':'gender'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_visa_application" model="ir.actions.act_window">
            <field name="name">client</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">visa.application</field>
            <field name="view_mode">tree,form</field>
<!--            <field name="context">{"search_default_filter_male":0}</field>-->
            <field name="help" type="html">
                <p>create client</p>
            </field>

        </record>
    <!--in manifest file first run menu_view after that run only you get run client_view , thats why here menu-items -->
    <menuitem id="visa_client"
              name="client"
              action="action_visa_application"
              parent="visa_client_master"
              sequence="0"/>
</odoo>