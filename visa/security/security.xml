<!--    access rights of xml used when you data again and again changing
with this chage access rights have load every time when change the data,
for this you can use xml file access rights and noupdate=1 -->

 <record model="ir.module.category" id="module_category_visa">
        <field name="name">visa</field>
        <field name="description">category for visa</field>
        <field name="sequence">100</field>

    </record>
    <record id="group_visa_manager" model="res.groups">
        <field name="name">manager</field>
        <field name="category_id" ref="module_category_visa"/>
    </record>

    <record id="group_visa_client" model="res.groups">
        <field name="name">client</field>
        <field name="category_id" ref="module_category_visa"/>
    </record>

    <record id="group_visa_client_2" model="res.groups">
        <field name="name">client2</field>
        <field name="category_id" ref="module_category_visa"/>
        <field name="implied_ids" eval="[(4,ref('group_visa_client'))]"/> <!--        /=inherit client-->

    </record>



    <record model="ir.rule" id="see_all">
        <field name="name">See all appointments</field>
        <field name="model_id" ref="model_visa_appointment"/>
        <field name = "domain_force"> [(1, '=', 1)] </field>

        <field name="groups" eval="[(4,ref('group_visa_manager'))]"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_write" eval="0"/>
        <field name="perm_unlink" eval="0"/>
    </record>

    <record model="ir.rule" id="see_own">
        <field name="name">See own appointment</field>
        <field name="model_id" ref="model_visa_appointment"/>
        <field name="domain_force">['|',('user_id','=',False),('user_id','=',user.id)]</field>
        <field name="groups" eval="[(4,ref('group_visa_client'))]"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_write" eval="0"/>
        <field name="perm_unlink" eval="1"/>
        <field name="perm_read" eval="1"/>

    </record>












</odoo>